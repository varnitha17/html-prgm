/* Universal Selector */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

/* Type Selector */
h2 {
    color: #4CAF50;
    font-family: Arial, sans-serif;
    font-size: 28px;
    border-bottom: 2px solid #4CAF50;
    padding-bottom: 5px;
}

h3 {
    color: #2196F3;
    font-family: 'Courier New', Courier, monospace;
    font-size: 24px;
    margin-bottom: 10px;
}

/* Class Selector */
p.highlight {
    background-color: #ffeb3b;
    font-weight: bold;
    padding: 10px;
    border: 1px dashed #ff9800;
}

/* ID Selector */
div#container {
    background-color: #e0f7fa;
    padding: 20px;
    border: 2px solid #00acc1;
}

/* Attribute Selector */
a[target="_blank"] {
    color: #e91e63;
    text-decoration: none;
    font-weight: bold;
}

a[target="_blank"]:hover {
    text-decoration: underline;
}

/* Descendant Selector */
div p {
    color: #616161;
    font-size: 16px;
}

/* Child Selector */
div > span {
    color: #009688;
    font-style: italic;
    font-size: 18px;
}

/* Adjacent Sibling Selector */
h2 + hr {
    border: 0;
    height: 1px;
    background-color: #4CAF50;
    margin: 10px 0;
}

/* General Sibling Selector */
h3 ~ p {
    font-family: 'Georgia', serif;
    color: #555;
}

/*Grouping Selector*/
time,img,span{
display:block;
margin:15px 0;
}

/*Pseudo-class Selector*/
a:hover{
color:#9c27b0;
text-decortation:underline;
}

/*Pseudo-Element Selector*/
p::first-line{
font-weight:bold;
color:#d32f2f;
}
